    @model ProjectsInfo.Models.Employes.Developer

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center;margin:2%">Edit Developer</h1>

<div class="row">
    <div class="col-md-4"  style="margin-left:auto;margin-right:auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: flex; flex-flow: row">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index">
                    <button type="button" class="btn waves-effect waves-light btn-block btn-danger" style="margin-left:5%">
                        Back
                    </button>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
