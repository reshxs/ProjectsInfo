            </div>
        </div>
        <div class="row">
            <div class="col detailsinfo">
                <div class="leftside">
                    @Html.DisplayNameFor(model => model.TimeProfit)%
                </div>
            </div>
            <div class="col detailsvalue">
                <div class="rightside">
                    @Html.DisplayFor(model => model.TimeProfit)%
