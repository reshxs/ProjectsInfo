                <div class="rightside">
                    @Html.DisplayFor(model => model.TimeBeforeEnd)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col detailsrowbtn">
                <form asp-action="Details" class="rowbtn">
                    <input type="hidden" asp-for="ID" />
                    <a asp-action="Edit" asp-route-id="@Model.ID">
                        <button type="button" class="btn waves-effect waves-light btn-block btn-danger" >
                            Редактировать
                        </button>
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.ID" style="color:white">
                        <button type="button" class="btn waves-effect waves-light btn-block btn-danger detailsdeletebtn">
                            Удалить
                        </button>
                    </a>
                    <a asp-action="Index">
                        <button type="button" class="btn waves-effect waves-light btn-block btn-danger detailsbackbtn">
                              Назад
                        </button>
                    </a>
                </form>
            </div>
        </div>
    </div>
