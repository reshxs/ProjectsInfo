                </div>
            </div>
            <div class="col detailsvalue">
                <div class="rightside">
                    @Html.DisplayFor(model => model.EndDate)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col detailsinfo">
                <div class="leftside">
                    @Html.DisplayNameFor(model => model.ExpectedHours)
                </div>
            </div>
            <div class="col detailsvalue">
