@model ProjectsInfo.Models.Project

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center;margin:2%">Edit profile</h1>

<div class="row">
    <div class="col-md-4" style="margin-left:auto;margin-right:auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedHours" class="control-label"></label>
                <input asp-for="ExpectedHours" class="form-control" />
                <span asp-validation-for="ExpectedHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DevelopmentHourPrice" class="control-label"></label>
                <input asp-for="DevelopmentHourPrice" class="form-control" />
                <span asp-validation-for="DevelopmentHourPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestingHours" class="control-label"></label>
                <input asp-for="TestingHours" class="form-control" />
                <span asp-validation-for="TestingHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestingHourPrice" class="control-label"></label>
                <input asp-for="TestingHourPrice" class="form-control" />
                <span asp-validation-for="TestingHourPrice" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: flex; flex-flow: row">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" >
                    <button type="button" class="btn waves-effect waves-light btn-block btn-danger" style="margin-left:5%">
                        Back
                    </button>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
