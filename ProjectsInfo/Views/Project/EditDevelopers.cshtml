@model ProjectsInfo.Models.Project

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDevelopers">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <input type="hidden" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ExpectedHours" class="form-control" />
                <span asp-validation-for="ExpectedHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DevelopmentHourPrice" class="form-control" />
                <span asp-validation-for="DevelopmentHourPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TestingHours" class="form-control" />
                <span asp-validation-for="TestingHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TestingHourPrice" class="form-control" />
                <span asp-validation-for="TestingHourPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                        @{
                            var count = 0;
                            List<AssignedDeveloperData> developers = ViewBag.Developers;
            
                            foreach (var developer in developers)
                            {
                                if (count++ % 3 == 0)
                                {
                                    @:</tr><tr>
                                }
                                @:<td>
                                <input type="checkbox"
                                       name="selectedDevelopers"
                                       value="@developer.DeveloperID"
                                       @(Html.Raw(developer.Assigned ? "checked=" : "")) />
                                @developer.DeveloperID @:  @developer.Name
                                @:</td>
                            }
                            @:</tr>
                        }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
